{% extends '::base.front.html.twig' %}
{% block title %}
    {% if data.brands %}
        Все производители
    {% else %}
        404 - Page not found
    {% endif %}
{% endblock %}

{% block meta %}
     {% if data.brands %}
        <meta name="keywords" content="Производители"/>
        <meta name="description" content="Производители"/>
    {% endif %}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('bundles/aliansstone/css/front.style.css')}}" type="text/css" media="screen"/> 
{% endblock %}

{% block content %}
    <hr />
   <div class="wrap">
   {% if data.brands %}
        <h1>Производители материалов</h1>
        <table class="tabel table-bordered">
        {% for brand in data.brands %}
            <tr>
            <td colspan="2">
                <a href="{{url('brand',{slug:brand.getBrand})}}"><h2>{{brand.getTitle}}</h2></a>
            </td>
            </tr>
            <tr>
                <td><a id="single_1" href="{{brand.getRelativeLinkToImg}}"><img class="radius5" src="{{brand.getRelativeLinkToThumbnailImg('150')}}"/></a></td>
                <td>{{brand.getContent | raw | slice(0,200)}}...
                    <p><a href="{{url('brand',{slug:brand.getBrand})}}">Подробнее...</a></p>
                </td>
            </tr>
        {% endfor %}
        
        </table>
   {% else %}
        {% include 'AliansStoneBundle:Front:404.html.twig' %}
   {% endif %}
    </div>
    

{% endblock %}


{% block customjs %}

{% endblock %}
