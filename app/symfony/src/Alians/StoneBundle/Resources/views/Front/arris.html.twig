{% extends '::base.front.html.twig' %}
{% block title %}
    {% if data.arris %}
        {{ data.arris.getTitle }}
    {% else %}
        404 - Page not found
    {% endif %}
{% endblock %}

{% block meta %}
     {% if data.arris %}
        <meta name="keywords" content="{{data.arris.getTitle}}"/>
        <meta name="description" content="{{data.arris.getTitle}}"/>
    {% endif %}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('bundles/aliansstone/css/front.style.css')}}" type="text/css" media="screen"/> 
{% endblock %}

{% block content %}
   <div class="wrap">
   {% if data.arris %}
        <table class="table">
        <tr>
        <td><h1>{{data.arris.getTitle}}</h1></td>
        
        <td><img class="radius5" src="{{data.arris.getRelativeLinkToThumbnailImg('150')}}"/></td>
        </tr>
        </table>
        <div class="arris-sample">
        
        {% if data.images1 %}
        <h3>{{data.arris.getText1}}</h3>
            {% for image in data.images1 %}
                <a href="{{image.getRelativeLinkToImg}}"><img class="radius5" src="{{image.getRelativeLinkToThumbnailImg('100')}}"/></a>
            {% endfor %}
        {% endif %}
        </div>
        <br />
        <div class="arris-sample">
        
        {% if data.images2 %}
        <h3>{{data.arris.getText2}}</h3>
            {% for image in data.images2 %}
                <a href="{{image.getRelativeLinkToImg}}"><img class="radius5" src="{{image.getRelativeLinkToThumbnailImg('100')}}"/></a>
            {% endfor %}
        {% endif %}
        </div>
        <br/>
        <div class="arris-sample">
        
        {% if data.images3 %}
        <h3>{{data.arris.getText3}}</h3>
            {% for image in data.images3 %}
                <a href="{{image.getRelativeLinkToImg}}"><img src="{{image.getRelativeLinkToThumbnailImg('100')}}"/></a>
            {% endfor %}
        {% endif %}
        </div>
        <div class="arris-description">
        {{data.arris.getContent | raw}}
        </div>
        <a href="{{url('arris2')}}">Все виды кромок >></a>
   {% else %}
        {% include 'AliansStoneBundle:Front:404.html.twig' %}
   {% endif %}
    </div>
{% endblock %}


{% block customjs %}
<script type="text/javascript">
    
    //fancybox
    $("#single_1").fancybox({
              helpers: {
                  title : {
                      type : 'float'
                  }
              }
          });
          
          /******************/
    /* magnific-popup */
    /******************/
    $('.arris-sample').each(function() { // the containers for all your galleries
    $(this).magnificPopup({
        delegate: 'a', // the selector for gallery item
        type: 'image',
        gallery: {
          enabled:true
        }
    });
}); 
</script>
{% endblock %}
