{% extends '::base.front.html.twig' %}
{% block title %}
    {% if data.news %}
        Материалы
    {% else %}
        404 - Page not found
    {% endif %}
{% endblock %}

{% block meta %}
     {% if data.news %}
        <meta name="keywords" content="Натуральный и искусственный камень"/>
        <meta name="description" content="Натуральный и искусственный камень"/>
    {% endif %}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('bundles/aliansstone/css/front.style.css')}}" type="text/css" media="screen"/> 
{% endblock %}

{% block content %}
   <hr />
   <div class="wrap">
   {% if data.news %}
        <h1>Все новости</h1>
        <table>
        {% for new in data.news %}
           
            <tr>
            <td colspan="2">
                <a href="{{url('new',{id:new.getId})}}"><h2>{{new.getTitle}}</h2></a>
            </td>
            </tr>
            <tr>
                <td><a id="single_1" href="{{new.getRelativeLinkToImg}}"><img class="radius5" src="{{new.getRelativeLinkToThumbnailImg('150')}}"/></a></td>
                <td>{{new.getContent | slice(0,200) | raw | striptags | replace({'&nbsp;':' '})}}...
                    <p><a href="{{url('new',{id:new.getId})}}">Подробнее</a></p>
                </td>
            </tr>
            
        {% endfor %}
        
        </table>
   {% else %}
        {% include 'AliansStoneBundle:Front:404.html.twig' %}
   {% endif %}
    </div>
    

{% endblock %}


{% block customjs %}

{% endblock %}
