{% extends '::base.front.html.twig' %}
{% block title %}
    {% if data.material %}
        {{ data.material.getTitle }}
    {% else %}
        404 - Page not found
    {% endif %}
{% endblock %}

{% block meta %}
     {% if data.material %}
        <meta name="keywords" content="{{data.material.getTitle}}"/>
        <meta name="description" content="{{data.material.getTitle}}"/>
    {% endif %}
{% endblock %}
{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{asset('bundles/aliansstone/css/front.style.css')}}" type="text/css" media="screen"/> 
   
{% endblock %}
{% block topjs %}
    {{parent()}}
{% endblock %}

{% block content %}
   <div class="wrap">
   {% if data.material %}
        <table>
        <tr>
        <td><h1>{{data.material.getTitle}}</h1></td>
        
        <td><img class="radius5" src="{{data.material.getRelativeLinkToThumbnailImg('150')}}"/></td>
        </tr>
        </table>
        <div class="material-sample">
        
        {% if data.images1 %}
        <h3>{{data.material.getText1}}</h3>
            <div class="gallery">
            {% for image in data.images1 %}
                <div class="material-preview">
                <a class="no-decoration" href="{{image.getRelativeLinkToImg}}" title="{{image.getTitle}}">
                    <img class="radius5" src="{{image.getRelativeLinkToThumbnailImg('100')}}" />
                    <p class="material-preview-title">{{image.getTitle}}</p>
                </a>
                </div>
            {% endfor %}
            </div>
            <div class="clear"></div>
        {% endif %}
        </div>
        
        <div class="material-sample">
        
        {% if data.images2 %}
        <h3>{{data.material.getText2}}</h3>
            <div class="gallery">
            {% for image in data.images2 %}
                <div class="material-preview">
                <a class="no-decoration" href="{{image.getRelativeLinkToImg}}" title="{{image.getTitle}}">
                    <img class="radius5" src="{{image.getRelativeLinkToThumbnailImg('100')}}"/>
                    <p class="material-preview-title">{{image.getTitle}}</p>
                </a>
                </div>
            {% endfor %}
            </div>
            <div class="clear"></div>
        {% endif %}
        </div>
        <div class="material-sample">
        
        {% if data.images3 %}
        <h3>{{data.material.getText3}}</h3>
        <div class="gallery">
        {% for image in data.images3 %}
            <div class="material-preview">
            <a class="no-decoration" href="{{image.getRelativeLinkToImg}}" title="{{image.getTitle}}">
                <img class="radius5" src="{{image.getRelativeLinkToThumbnailImg('100')}}"/>
                <p class="material-preview-title">{{image.getTitle}}</p>
            </a>
            </div>
        {% endfor %}
            </div>
            <div class="clear"></div>
        {% endif %}
        </div>
        <div class="material-description">
        {{data.material.getContent | raw}}
        </div>
        <a href="{{url('material2')}}">Все материалы >></a>
   {% else %}
        {% include 'AliansStoneBundle:Front:404.html.twig' %}
   {% endif %}
    </div>
{% endblock %}


{% block customjs %}
<script type="text/javascript">
    
    /******************/
    /* magnific-popup */
    /******************/
    $('.gallery').each(function() { // the containers for all your galleries
    $(this).magnificPopup({
        delegate: 'a', // the selector for gallery item
        type: 'image',
        gallery: {
          enabled:true
        },
        image: {
        // options for image content type
        titleSrc: 'title'
      }
    });
}); 
</script>
{% endblock %}
