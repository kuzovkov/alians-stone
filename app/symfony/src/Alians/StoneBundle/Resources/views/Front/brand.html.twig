{% extends '::base.front.html.twig' %}
{% block title %}
    {% if data.brand %}
        {{ data.brand.getTitle }}
    {% else %}
        404 - Page not found
    {% endif %}
{% endblock %}

{% block meta %}
     {% if data.brand %}
        <meta name="keywords" content="{{data.brand.getTitle}}"/>
        <meta name="description" content="{{data.brand.getTitle}}"/>
    {% endif %}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('bundles/aliansstone/css/front.style.css')}}" type="text/css" media="screen"/> 
    <link rel="stylesheet" href="{{asset('bundles/aliansstone/magnific-popup/magnific-popup.css')}}" type="text/css" media="screen"/> 
{% endblock %}
{% block topjs %}
    {{parent()}}
    <script type="text/javascript" src="{{asset('bundles/aliansstone/magnific-popup/jquery.magnific-popup.min.js')}}"></script>
{% endblock %}

{% block content %}
   <div class="wrap">
   {% if data.brand %}
        <table>
        <tr>
        <td><h1>{{data.brand.getTitle}}</h1></td>
        
        <td><img class="radius5" src="{{data.brand.getRelativeLinkToThumbnailImg('150')}}"/></td>
        </tr>
        </table>
        <div class="brand-sample">
        
        {% if data.images1 %}
        <h3>{{data.brand.getText1}}</h3>
            <div class="gallery">
            {% for image in data.images1 %}
                <a href="{{image.getRelativeLinkToImg}}"><img class="radius5" src="{{image.getRelativeLinkToThumbnailImg('100')}}"/></a>
            {% endfor %}
            </div>
        {% endif %}
        </div>
        
        <div class="brand-sample">
        
        {% if data.images2 %}
        <h3>{{data.brand.getText2}}</h3>
            <div class="gallery">
            {% for image in data.images2 %}
                <a href="{{image.getRelativeLinkToImg}}"><img class="radius5" src="{{image.getRelativeLinkToThumbnailImg('100')}}"/></a>
            {% endfor %}
            </div>
        {% endif %}
        </div>
        <div class="brand-sample">
        
        {% if data.images3 %}
        <h3>{{data.brand.getText3}}</h3>
        <div class="gallery">
            {% for image in data.images3 %}
                <a href="{{image.getRelativeLinkToImg}}"><img class="radius5" src="{{image.getRelativeLinkToThumbnailImg('100')}}"/></a>
            {% endfor %}
            </div>
        {% endif %}
        </div>
        <div class="brand-description">
        {{data.brand.getContent | raw}}
        </div>
        <a href="{{url('brands')}}">Все производители >></a>
   {% else %}
        {% include 'AliansStoneBundle:Front:404.html.twig' %}
   {% endif %}
    </div>
{% endblock %}


{% block customjs %}
<script type="text/javascript">
    
    /******************/
    /* magnific-popup */
    /******************/
    $('.gallery').each(function() { // the containers for all your galleries
    $(this).magnificPopup({
        delegate: 'a', // the selector for gallery item
        type: 'image',
        gallery: {
          enabled:true
        }
    });
}); 
</script>
{% endblock %}
