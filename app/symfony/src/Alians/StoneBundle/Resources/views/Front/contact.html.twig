{% extends '::base.front.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('bundles/aliansstone/css/front.style.css')}}" type="text/css" media="screen"/>  
{% endblock %}

{% block content %}
    <hr />
    <div class="wrap">
    <table class="table table-striped table-bordered">
    <tr>
    <th colspan="2">Контакты для связи с нами:</th>
    </tr>
    {% if data.settings['address'] is defined %}
    <tr>
    <td>Адрес:</td><td>{{data.settings['address']}}</td>
    </tr>
    {% endif %}
     {% if data.settings['tel_central_office'] is defined %}
     <tr>
    <td>Центральный офис:</td><td>{{data.settings['tel_central_office']}}</td>
    </tr>
    {% endif %}
    {% if data.settings['opening_hours'] is defined %}
    <tr>
    <td>Часы работы:</td><td>{{data.settings['opening_hours']}}</td>
    </tr>
    {% endif %}
    {% if data.settings['tel_otdel_rachetov'] is defined %}
    <tr>
    <td>Отдел расчетов заказов:</td><td>{{data.settings['tel_otdel_rachetov']}}</td>
    </tr>
    {% endif %}
    </table>
     </div>
     <div class="yandex-map">
        <script type="text/javascript" charset="utf-8" src="//api-maps.yandex.ru/services/constructor/1.0/js/?sid=CtDnJlx1UzBnz-CfScbw_F6lyY5hg1As&width=600&height=450"></script>
        
        
     </div>

{% endblock %}


{% block customjs %}
<script type="text/javascript">
    var nav = document.getElementById('contact');
    nav.className = "active";
</script>
{% endblock %}
